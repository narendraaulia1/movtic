generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id          String     @id @default(uuid())
  title       String
  description String
  duration    String
  createdAt   DateTime   @default(now())
  showtimes   Showtime[] // relasi balik ke Showtime
}

model Showtime {
  id           String        @id @default(uuid())
  movieId      String
  movie        Movie         @relation(fields: [movieId], references: [id])
  startTime    DateTime
  tickets      Ticket[]
  transactions Transaction[]
}

model Ticket {
  id         String   @id @default(uuid())
  seat       String
  price      Float
  showtimeId String
  showtime   Showtime @relation(fields: [showtimeId], references: [id])
  isSold     Boolean  @default(false) // status tiket
  createdAt  DateTime @default(now())
}

